<div class="d-flex justify-content-center align-items-center vh-100">
  <div class="border p-2 w-50 loginbox">
    <%= image_tag "https://res.cloudinary.com/db7q8jblt/image/upload/v1637937030/development/lupa_rjxzmo.jpg", id: "lupa" %>
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email" } %>
      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password" } %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Log in", class: "btn-success text-light p-2 shadow-none" %>
    </div>
  <% end %>
  <div class="my-4">
    <%= render "devise/shared/links" %>
  </div>
  </div>
</div>
