<h1> <%= @court.name %> </h1>
<ul>
  <li> LOCATION: <%= @court.location %> </li>
  <li> <%= @court.availability ? "AVAILABLE" : "NOT AVAILABLE" %> </li>
  <li> PRICE: R$ <%= @court.pricing %> </li>
  <li> CAPACITY: <%= @court.capacity %> </li>
</ul>

<ul>
<% @reservations.each do |reservation| %>
  <% @users.each do |user| %>
  <% if reservation.user_id == user.id %>
  <li> <%= user.first_name %> booked <%= @court.name %> for <%= reservation.date %>
        <%= link_to "Delete",
            reservation_path(reservation),
            method: :delete,
            data: { confirm: "Are you sure?" } %>
  </li>
  <% end %>
  <% end %>
<% end %>
</ul>

<%= simple_form_for([@court, @reservation]) do |f| %>
  <%= f.input :date %>
  <%= f.submit %>
<% end %>


<%= link_to "Edit", edit_court_path(@court) %>
<%= link_to "Delete",
            court_path(@court),
            method: :delete,
            data: { confirm: "Are you sure?" } %>

<%= link_to "Back to Courts", courts_path %>
